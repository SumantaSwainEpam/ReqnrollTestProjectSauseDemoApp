<?xml version="1.0" encoding="utf-8" ?>
<log4net debug="false">

    <!-- Console Appender -->
    <appender name="ConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
        <mapping>
            <level value="INFO" />
            <foreColor value="White" />
        </mapping>
        <mapping>
            <level value="WARN" />
            <foreColor value="Yellow" />
        </mapping>
        <mapping>
            <level value="ERROR" />
            <foreColor value="Red" />
        </mapping>
        <mapping>
            <level value="FATAL" />
            <foreColor value="DarkMagenta" />
        </mapping>
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="[%date{dd-MM-yyyy HH:mm:ss}] [%-5level] %message%newline" />
        </layout>
    </appender>

    <!-- Rolling File Appender -->
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
        <!-- Dynamic log file name is set from LogManager -->
        <file type="log4net.Util.PatternString" value="%property{LogFileName}" />
        <appendToFile value="true" />

        <!-- Roll logs by size -->
        <rollingStyle value="Size" />
        <maxSizeRollBackups value="5" />
        <maximumFileSize value="5MB" />
        <staticLogFileName value="true" />

        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="[%date{dd-MM-yyyy HH:mm:ss}] [%-5level] [%logger] - %message%newline" />
        </layout>

        <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    </appender>

    <!-- Root Logger -->
    <root>
        <level value="INFO" />
        <appender-ref ref="ConsoleAppender" />
        <appender-ref ref="RollingFileAppender" />
    </root>
</log4net>
